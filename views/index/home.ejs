<%- include ("../partials/header") %>

<div class="ui main  container">
	<div class="ui huge header">
		Blog
	</div>
	<% blogs.forEach((b) => { %>
	<div class="ui top attached segment">
		
		<div class="ui divided items">
			
			<div class="item">
				<div class="image">
					<img src="<%=b.img %>">
				</div>
				<div class="content">
					<a class="header" href="/index/<%= b._id %>"><%= b.title %></a>
					<div class="meta">
						<span><%=b.date.toDateString()%></span>
					</div>
					<div class="description">
						<p>
							<%-b.cont.substring(0, 200) %>....
						</p>	
					</div>
					<div class="extra">
						<a class="ui floated basic mini violet button" href="/index/<%= b._id %>">Show more<i class="right chevron icon"></i></a>
					</div>
				</div>
			</div>
					
		</div>
	</div>
	<% }) %>
</div>

<%- include ("../partials/footer") %>
