<%- include ("../partials/header") %>

<div class="ui main container segment">
	<form class="ui form" action="/index/<%=bg._id%>?_method=PUT" method="POST">
		<div class="field">
			<label>Title</label>
			<input type="text" name="blog[title]" value="<%=bg.title%>">
		</div>
		<div class="field">
			<label>Image URL</label>
			<input type="text" name="blog[img]" value="<%=bg.img%>">
		</div>
		<div class="field">
			<label>Body</label>
			<textarea name="blog[cont]"><%=bg.cont%></textarea>
		</div>
		<input class="ui violet big basic button "type="submit">
	</form>
</div>
