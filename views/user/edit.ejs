<%- include ("../partials/header") %>
<div class="ui main container segment">
	<form class="ui form" action="/profile/<%=user._id%>?_method=PUT" method="POST">
		<div class="field">
			<label>Image URL</label>
			<input type="text" name="user[image]" value="<%=user.image%>">
		</div>
		<div class="field">
			<label>About</label>
			<textarea name="user[about]"><%=user.about%></textarea>
		</div>
		<div class="field">
			<label>Age</label>
			<input type="number" name="user[age]" value="<%=user.age%>">
		</div>
		<div class="field">
			<label>Gender</label>
			<input type="text" name="user[Gender]" value="<%=user.Gender%>">
		</div>
		<input class="ui violet big basic button "type="submit">
	</form>
</div>
<%- include ("../partials/footer") %>