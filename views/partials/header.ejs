<!doctype html>
<html>
	<head>
		<title>Blog</title>
		<link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.4.1/semantic.min.css">
	</head>
	<body>
		<div class="ui inverted borderless massive menu">
			
			<div class="header item">
				<i class="clipboard outline icon"></i>
    			<b>Blog</b>
  			</div>
  			<a class="item" href="/">
    			Home
  			</a>
  			<a class="item" href="/index/new">
    			New Post
  			</a>
			<div class="right menu">
				<% if(!currentUser){ %>
    			<a class="item" href='/register'>Sign Up</a>
    			<a class="item" href='/login'>Login</a>
				<% } else { %>
				<a class="item" href="/profile/<%=currentUser._id%>"> <%=currentUser.username%></a>
				<a class="item" href='/logout'>Logout</a>
				<% } %>
  			</div>
		</div>
		<% if(error && error.length>0){ %>
		<div class="ui main container">
			
		
		<div class="ui red compact message tiny" style="margin:1em auto">
  			<!-- <i class="close icon"></i> -->
  			<div class="header">
    			<%=error%>
	  		</div>
		</div>
			</div>
		<% } %>
		